<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :contact, style: "display: block" %>
    <%= form.text_field :contact %>
  </div>

  <div>
    <%= form.label :avatar, style: "display: block" %>
    <%= form.file_field :avatar %>
  </div>

    <%# Теги %>
  <div>
    <label for="tags">Теги</label>
    <% Tag.tags_list.each do |tag| %>
      <div class="form-check">
        <%= check_box_tag "profile[tag_list][]", tag.name, false, class: 'form-check-input', id: "profile_tag_list_#{tag.name}" %>
        <%= label_tag "profile_tag_list_#{tag.name}", tag.name, class: 'form-check-label', for: "profile_tag_list_#{tag.name}" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
