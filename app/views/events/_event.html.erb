<div id="<%= dom_id event %>">
  <p><%= event.user.profile.name %></p>
  <% if event.community.nil? %>
    <p>Индивидуальное событие</p>
  <% else %>
    <p><%= event.community.title %></p>
  <% end %>
  <h2><%= event.title %></h2>
  <%= image_tag event.cover.url, class: 'A_EventCover' if event.cover.present? %>
  <p><%= event.body %></p>
</div>
