<% content_for :title, "События" %>

<p style="color: green"><%= notice %></p>

<h1>События</h1>

<div id="C_Events">
  <% @events.each do |event| %>
    <%= link_to event_path(event), class: 'M_EventCard' do %>
      <%= event.hosted_at.strftime("%d/%m/%Y %H:%M") %>
      <%= render event %>
    <% end %>
  <% end %>
</div>

<%= link_to "New event", new_event_path %>